<style>
  .player-div {
    padding: 15px;
    border: solid 2px black;
    border-radius: 10%;
    height: 200px;
    width: 200px;
  }
  .current {
    border: solid 4px green;
    background-color: #EAFAF1;
    border-radius: 10%;
  }
  .folded {
    background-color: #D3D3D3;
  }
  .game {
    margin: 0;
    transform: scale(0.75);
    transform-origin: top left;
  }
  .table {
    padding: 30px;
    margin: 10px;
    border: solid 2px black;
    border-radius: 10%;
  }
</style>

<h1><%=link_to "#{Poker::BAKA} Poker", games_path %></h1>
<hr/>

<div class='game'>
  <table>
    <%= render partial: 'actions' %>
    <tr valign="top">
      <td>
        <%= game_table %>
      </td>
      <td>
        <%= game_stats %>
      </td>
    </tr>
    <%= render partial: 'actions' %>
  </table>
</div>

<hr/>
<%=text_area_tag :game_hand, @game.read_log, size: '100x40' %>

<hr/>
<p><b>Deck:</b><br/><%= show_tiny_cards(@game.deck.cards) %></p>
<p><b>Drawn:</b><br/><%= show_tiny_cards(@game.deck.drawn) %></p>
<p><b>Discarded:</b><%= show_tiny_cards(@game.deck.discarded) %></p>
