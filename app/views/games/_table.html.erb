<table>
  <tr valign="bottom">
    <td>&nbsp;</td>
    <td><%= player_table(0) %></td>
    <td><%= player_table(1) %></td>
    <td>&nbsp;</td>
  </tr>
  <tr>
    <td><%= player_table(5) %></td>
    <td colspan=2>
      <div class='table'>
        <% @game.community_cards.each do |c| %>
          <%= large_card(c) %>
        <% end %>
        <% (5 - @game.community_cards.size).times do %>
          <%= large_back_card %>
        <% end %>
        <br/>
        <b><%=@game.stage%></b>
        Pot: <%= fmt_money(@game.pot) %>
        Call: <%= fmt_money(@game.cp_call_amt) %>
        Min Raise: <%= fmt_money(@game.current_bet) %>
        <br/>
        <i><%= @game.last_player_action %></i>

        <br/>player_action_cnt: <%= @game.player_action_cnt %>
        <br/>player_total_action_cnt: <%= @game.player_total_action_cnt %>
        <br/>player_all_in_cnt: <%= @game.player_all_in_cnt %>
      </div>
    </td>
    <td><%= player_table(2) %></td>
  </tr>
  <tr valign="top">
    <td>&nbsp;</td>
    <td><%= player_table(4) %></td>
    <td><%= player_table(3) %></td>
    <td>&nbsp;</td>
  </tr>
</table>
